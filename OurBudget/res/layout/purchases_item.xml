<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:id="@+id/purchases_item_contein"
            android:layout_gravity="center_vertical"
            android:textSize="18sp"
            android:autoText="false"
            android:layout_toLeftOf="@+id/purchases_item_state"
            android:layout_alignParentLeft="true"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="38dp"
            android:id="@+id/purchases_item_info"
            android:layout_gravity="center_vertical"
            android:textSize="14sp"
            android:autoText="false"
            android:layout_below="@+id/purchases_item_contein"
            android:layout_toLeftOf="@+id/purchases_item_state"
            android:gravity="center_vertical|right"
            android:layout_alignParentLeft="true"
            android:layout_alignBottom="@+id/purchases_item_state"/>
    <ImageView
            android:id="@+id/purchases_item_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_launcher"
            android:layout_alignParentRight="true">
    </ImageView>
</RelativeLayout>